<Application x:Class="Resources_Metter_2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Resources_Metter_2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Roboto font resources -->
            <FontFamily x:Key="RobotoBold">pack://application:,,,/Resources/#Roboto Black</FontFamily>
            <FontFamily x:Key="RobotoMedium">pack://application:,,,/Resources/#Roboto Medium</FontFamily>
            <FontFamily x:Key="Roboto">pack://application:,,,/Resources/#Roboto</FontFamily>

        </ResourceDictionary>
    </Application.Resources>
</Application>
