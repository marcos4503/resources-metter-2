<Window x:Class="Resources_Metter_2.WindowPercentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resources_Metter_2"
        mc:Ignorable="d" Background="Transparent" Title="." ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" WindowStyle="None" AllowsTransparency="True">
    <Grid Height="60" Width="48">
        <Border BorderBrush="#FF578FA2" BorderThickness="1" Height="48" Width="48" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="4,4,4,4" Background="White"/>
        <Border BorderBrush="#FF578FA2" BorderThickness="1,0,0,1" VerticalAlignment="Top" HorizontalAlignment="Left" Height="16" Width="16" Background="White" RenderTransformOrigin="0.5,0.5" Margin="16,40,0,0">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-45"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="48" Width="48">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,6,0,0">
                <Image x:Name="icon" Height="20" Width="20" Source="/Resources/cpu-fan-icon.png"/>
                <TextBlock x:Name="value" Text="100%" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="{DynamicResource RobotoMedium}" FontSize="14" Opacity="0.75" Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
