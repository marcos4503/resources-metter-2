<Window x:Class="Resources_Metter_2.WindowPositionDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resources_Metter_2"
        mc:Ignorable="d"
        Title="Position Display" WindowStyle="None" AllowsTransparency="True" Icon="/Resources/icon-32px.png" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Background="#00000000">
    <Grid Width="150" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Border BorderBrush="#FF4A0000" BorderThickness="2,2,2,2" Background="#FFA20000" CornerRadius="4,4,4,4">
            <TextBlock x:Name="positionTxt" TextWrapping="Wrap" Text="0000x0000" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,0,0,1"/>
        </Border>

    </Grid>
</Window>
